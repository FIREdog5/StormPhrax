{
    "multipart": [
        {   "when": { "facing": "north" },
	            "apply": { "model": "stormphrax:block_transformer"}
	    },
	    {   "when": { "facing": "south" },
	            "apply": { "model": "stormphrax:block_transformer", "y":180 }
	    },
	    {   "when": { "facing": "east" },
	            "apply": { "model": "stormphrax:block_transformer", "y":90 }
	    },
	    {   "when": { "facing": "west" },
	            "apply": { "model": "stormphrax:block_transformer", "y":270 }
	    },
        {   "when": { "east": "true" },
            "apply": { "model": "stormphrax:wire_connector", "y":90 }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "stormphrax:wire_connector", "y":270 }
        },
        {   "when": { "north": "true" },
            "apply": { "model": "stormphrax:wire_connector" }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "stormphrax:wire_connector", "y":180 }
        }
    ]
}
